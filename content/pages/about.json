    <!-- JavaScript for About Page -->
    <script>
        // Global variables
        let aboutData = null;
        let currentLanguage = 'en';
        
        // DOM elements
        const loadingContainer = document.getElementById('loadingContainer');
        const errorContainer = document.getElementById('errorContainer');
        const overviewSection = document.getElementById('overviewSection');
        const missionSection = document.getElementById('missionSection');
        const valuesSection = document.getElementById('valuesSection');
        const problemSolutionSection = document.getElementById('problemSolutionSection');
        
        // Content elements
        const overviewContent = document.getElementById('overviewContent');
        const missionContent = document.getElementById('missionContent');
        const visionContent = document.getElementById('visionContent');
        const objectiveContent = document.getElementById('objectiveContent');
        const valuesContent = document.getElementById('valuesContent');
        const problemContent = document.getElementById('problemContent');
        const solutionContent = document.getElementById('solutionContent');
        const aboutImage = document.getElementById('aboutImage');
        const establishedYear = document.getElementById('establishedYear');
        
        // Language toggle buttons
        const langButtons = document.querySelectorAll('.lang-btn');
        
        // Load about data from JSON
        async function loadAboutData() {
            try {
                // Show loading, hide error and content
                loadingContainer.style.display = 'block';
                errorContainer.style.display = 'none';
                hideAllContentSections();
                
                const response = await fetch('/content/pages/about.json');
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                aboutData = await response.json();
                
                // Hide loading, show content
                loadingContainer.style.display = 'none';
                showAllContentSections();
                
                // Render initial content (English)
                renderContent();
                
                // Set image if available
                if (aboutData.about_image) {
                    aboutImage.src = aboutData.about_image;
                }
                
                // Set last updated if available
                if (aboutData.last_updated) {
                    updateLastUpdated(aboutData.last_updated);
                }
                
            } catch (error) {
                console.error('Error loading about data:', error);
                loadingContainer.style.display = 'none';
                errorContainer.style.display = 'block';
            }
        }
        
        // Hide all content sections
        function hideAllContentSections() {
            overviewSection.style.display = 'none';
            missionSection.style.display = 'none';
            valuesSection.style.display = 'none';
            problemSolutionSection.style.display = 'none';
        }
        
        // Show all content sections
        function showAllContentSections() {
            overviewSection.style.display = 'block';
            missionSection.style.display = 'block';
            valuesSection.style.display = 'block';
            problemSolutionSection.style.display = 'block';
        }
        
        // Render content based on current language
        function renderContent() {
            if (!aboutData) return;
            
            const langData = aboutData[currentLanguage];
            
            // Overview
            if (overviewContent && langData.overview) {
                overviewContent.innerHTML = convertMarkdownToHTML(langData.overview);
            }
            
            // Mission
            if (missionContent && langData.mission) {
                missionContent.textContent = langData.mission;
            }
            
            // Vision
            if (visionContent && langData.vision) {
                visionContent.textContent = langData.vision;
            }
            
            // Objective
            if (objectiveContent && langData.objective) {
                objectiveContent.textContent = langData.objective;
            }
            
            // Values
            if (valuesContent && langData.values) {
                renderValues(langData.values);
            }
            
            // Problem
            if (problemContent && langData.problem) {
                problemContent.innerHTML = convertMarkdownToHTML(langData.problem);
            }
            
            // Solution
            if (solutionContent && langData.solution) {
                solutionContent.innerHTML = convertMarkdownToHTML(langData.solution);
            }
        }
        
        // Render values list
        function renderValues(values) {
            if (!values || !Array.isArray(values)) return;
            
            valuesContent.innerHTML = `
                <div class="values-grid">
                    ${values.map((value, index) => `
                        <div class="value-card">
                            <div class="value-icon ${getValueIconClass(index)}">
                                <i class="${getValueIcon(index)}"></i>
                            </div>
                            <h3>${getValueTitle(index)}</h3>
                            <p>${value}</p>
                        </div>
                    `).join('')}
                </div>
            `;
            
            // Alternative list view
            /*
            valuesContent.innerHTML = `
                <ul class="values-list">
                    ${values.map(value => `
                        <li>
                            <i class="fas fa-check-circle"></i>
                            <span>${value}</span>
                        </li>
                    `).join('')}
                </ul>
            `;
            */
        }
        
        // Get value icon based on index
        function getValueIcon(index) {
            const icons = [
                'fas fa-user-tie',
                'fas fa-eye',
                'fas fa-shield-alt',
                'fas fa-lightbulb',
                'fas fa-handshake',
                'fas fa-chart-line'
            ];
            return icons[index] || 'fas fa-star';
        }
        
        // Get value icon class based on index
        function getValueIconClass(index) {
            const classes = [
                'professional',
                'transparency',
                'integrity',
                'innovation',
                'client-focused',
                'growth'
            ];
            return classes[index] || 'default';
        }
        
        // Get value title based on index
        function getValueTitle(index) {
            const titles = [
                'Professionalism',
                'Transparency',
                'Integrity',
                'Innovation',
                'Client-Focused',
                'Sustainable Growth'
            ];
            return titles[index] || `Value ${index + 1}`;
        }
        
        // Convert markdown to HTML (basic conversion)
        function convertMarkdownToHTML(markdown) {
            if (!markdown) return '';
            
            // Convert headers
            let html = markdown
                .replace(/^# (.*$)/gm, '<h1>$1</h1>')
                .replace(/^## (.*$)/gm, '<h2>$1</h2>')
                .replace(/^### (.*$)/gm, '<h3>$1</h3>')
                .replace(/^#### (.*$)/gm, '<h4>$1</h4>');
            
            // Convert bold
            html = html.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
            
            // Convert lists (basic)
            html = html.replace(/^\s*[-*]\s+(.*$)/gm, '<li>$1</li>');
            html = html.replace(/(<li>.*<\/li>)/s, '<ul>$1</ul>');
            
            // Convert paragraphs (for lines that aren't already HTML)
            html = html.replace(/^(?!<[^>]*>)(.+)$/gm, '<p>$1</p>');
            
            // Remove empty paragraphs
            html = html.replace(/<p>\s*<\/p>/g, '');
            
            // Convert line breaks
            html = html.replace(/\n/g, '<br>');
            
            return html;
        }
        
        // Update last updated display
        function updateLastUpdated(dateString) {
            const lastUpdatedElement = document.getElementById('lastUpdated');
            if (!lastUpdatedElement) return;
            
            try {
                const date = new Date(dateString);
                lastUpdatedElement.textContent = `Last updated: ${date.toLocaleDateString()}`;
            } catch (e) {
                console.error('Error formatting date:', e);
            }
        }
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Load about data
            loadAboutData();
            
            // Language toggle functionality
            langButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Update active button
                    langButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Update current language
                    currentLanguage = this.getAttribute('data-lang');
                    
                    // Re-render content
                    if (aboutData) {
                        renderContent();
                    }
                });
            });
            
            // Accordion functionality
            const accordionHeaders = document.querySelectorAll('.accordion-header');
            accordionHeaders.forEach(header => {
                header.addEventListener('click', function() {
                    const item = this.parentElement;
                    const content = this.nextElementSibling;
                    const icon = this.querySelector('.accordion-icon i');
                    
                    // Toggle active class
                    item.classList.toggle('active');
                    
                    // Toggle content visibility
                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                        icon.className = 'fas fa-chevron-down';
                    } else {
                        content.style.maxHeight = content.scrollHeight + 'px';
                        icon.className = 'fas fa-chevron-up';
                    }
                });
            });
            
            // Initialize accordions
            setTimeout(() => {
                const activeItems = document.querySelectorAll('.accordion-item.active');
                activeItems.forEach(item => {
                    const content = item.querySelector('.accordion-content');
                    if (content) {
                        content.style.maxHeight = content.scrollHeight + 'px';
                        const icon = item.querySelector('.accordion-icon i');
                        if (icon) {
                            icon.className = 'fas fa-chevron-up';
                        }
                    }
                });
            }, 100);
            
            // Add admin edit button if logged in
            if (window.netlifyIdentity && netlifyIdentity.currentUser()) {
                const adminEditBtn = document.createElement('a');
                adminEditBtn.href = '/admin/#/collections/pages';
                adminEditBtn.className = 'admin-edit-btn';
                adminEditBtn.innerHTML = '<i class="fas fa-edit"></i> Edit About Page';
                document.body.appendChild(adminEditBtn);
            }
        });
    </script>

    <!-- JavaScript Files -->
    <script src="js/main.js"></script>
</body>
</html>
